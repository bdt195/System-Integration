                )
                .append(
                    $('<td>')
                    .text(data[i].author)
                )
                .append(
                    $('<td>')
                    .text(data[i].description)
                )
                .append(
                    $('<td>')
                    .text(data[i].total_books)
                )
                .append(
                    $('<td>')
                    .text(data[i].avaliable)
                )
            );
    }
}
</script>