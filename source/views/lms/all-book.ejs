<script>
function genTable(data){
        for(let i=0;i< data.length;i++){
            $("#listPerson").find('tbody')
            .append($('<tr>')
                .attr({class: 'text-center'})
                .append(
                    $('<td>')
                    .text(data[i].book_id)
                )
                .append(
                    $('<td>')
